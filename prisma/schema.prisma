generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Profile {
  id             String   @id @default(cuid())
  userId         String 
  user           User     @relation(fields: [userId], references: [id])
  firstName      String?
  email          String?
  fullName       String?
  lastName       String?
  linkedInUrl    String?
  githubUrl      String?
  phoneNumber    String?
  portfolioUrl   String?
  experience     String?
  city           String?
  country        String?
  state          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profiles  Profile[]
}
